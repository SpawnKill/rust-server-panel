# Настройки приложения
NODE_ENV=production
PORT=3000
WS_PORT=3001
HOST=0.0.0.0

# Безопасность
JWT_SECRET=your-super-secret-jwt-key-change-this
SESSION_SECRET=your-session-secret-change-this
ADMIN_PASSWORD=admin123  # Изменить при первой настройке

# Пути
RUST_SERVER_PATH=/home/rustserver
STEAMCMD_PATH=/home/steam/steamcmd
LOG_PATH=/var/log/rust-panel

# База данных
DB_TYPE=sqlite  # sqlite или mysql
DATABASE_URL=sqlite:///data/panel.db

# Для MySQL:
# MYSQL_HOST=localhost
# MYSQL_PORT=3306
# MYSQL_DATABASE=rust_panel
# MYSQL_USER=rust
# MYSQL_PASSWORD=password

# Steam API (опционально)
STEAM_API_KEY=your-steam-api-key
STEAM_USERNAME=anonymous
STEAM_PASSWORD=

# Настройки магазина
SHOP_CURRENCY=RUB
SHOP_ENABLED=true
PAYMENT_PROVIDER=none  # none, stripe, yookassa, etc.

# Лимиты
MAX_SERVERS=5
MAX_BACKUPS_PER_SERVER=10
MAX_UPLOAD_SIZE=100MB